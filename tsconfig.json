{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "amd",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "outDir": "www/js",
    "removeComments": false,
    "target": "es2018",
    "paths": {
      "react/jsx-runtime": ["types/jsx-runtime"],
      "@/*": ["src/*"],
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
